<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">#2190ab</item>
    </style>

    <style name="StandardFontProps">
        <item name="android:letterSpacing">0.15</item>
    </style>
    <style name="FontBold" parent="StandardFontProps">
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FontCapitalBold" parent="FontBold">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="textStyleX" parent="StandardFontProps">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
